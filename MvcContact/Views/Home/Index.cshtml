@model List<Person>
@{
    ViewData["Title"] = "Home Page";
}
@{ Layout = null;}


<div>
    <a asp-action="CreatePerson">Yeni Kisi Ekle</a>
    <style>
        a {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 20px;
        }
    </style>
</div>
<div>
    <h2>Contact List</h2>

    <table>
        <tr>
            <th>ID</th>
            <th>AD</th>
            <th>SOYAD</th>
            <th>TELEFON</th>
            <th> </th>
        </tr>
        @{
            foreach (Person kisi in Model)
            {
                <tr>
                    <td>@kisi.Id</td>
                    <td>@kisi.Name</td>
                    <td>@kisi.Surname</td>
                    <td>@kisi.Phone</td>
                    <td><a asp-route-id="@kisi.Id" asp-action="Delete">Sil</a></td>
                </tr>

                @*<tr>
                    <td>Emine Kosak</td>
                    <td>Guillaume Manthe</td>
                    <td>French</td>
                </tr>*@

            }
        }


    </table>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</div>